<%= form_for @property do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :property_type %>
    <%= f.select :property_type, options_for_property_type(@property.property_type) %>
  </div>

  <div>
    <%= f.label :status %>
    <%= f.select :status, options_for_status(@property.status) %>
  </div>

  <div>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div>
    <%= f.label :year_built %>
    <%= f.text_field :year_built %>
  </div>

  <div>
    <%= f.label :square_feet %>
    <%= f.text_field :square_feet %>
  </div>

  <div>
    <%= f.label :lot_size %>
    <%= f.text_field :lot_size %>
  </div>

  <div>
    <%= f.label :baths %>
    <%= f.text_field :baths %>
  </div>

  <div>
    <%= f.label :bedrooms %>
    <%= f.text_field :bedrooms %>
  </div>

  <div>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </div>

  <%= f.submit 'List Property' %>
<% end %>
